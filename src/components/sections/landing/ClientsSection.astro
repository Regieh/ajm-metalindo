import arwana from "@images/client/arwana.png";
import arna from "@images/client/arna.png";
import sinarmas from "@images/client/sinarmas.png";
import motul from "@images/client/motul.png";
import scarlett from "@images/client/scarlett.jpg";
import strepsil from "@images/client/strepsil.png";
