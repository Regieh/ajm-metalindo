---
// Import the necessary components
import SubHeroSection from "@/components/sections/landing/SubHeroSection.astro";
import MainLayout from "@/layouts/MainLayout.astro";
import { SITE } from "@data/constants";
import bg1 from "@images/services.png";
import showroom1Image from "@images/services/services-sh-1.png";
import showroom2Image from "@images/services/services-sh-2.png";
import exterior2Image from "@images/services/exterior-1.jpeg";
import exterior1Image from "@images/services/exterior-2.jpeg";
import { Image } from "astro:assets";
import GiveHelp from "@/components/sections/landing/GiveHelp.astro";
import racksliding from "@images/racksliding.jpeg";
import boothdisplay from "@images/boothdisplay.jpeg"
import interior from "@images/interior.jpeg"
import acrylicdigitalprinting from "@images/acrylicdigitalprinting.jpeg"

const pageTitle: string = `About | ${SITE.title}`;

const exhibition = {
  title: "Booth & Display",
  description:
    "Kami menciptakan Booth dan Display kustom untuk membuat merek Anda menonjol di acara dan pameran.",
};

const showroom = {
  title: "Showroom",
  description:
  "Kami merancang dan membangun pengaturan interior dan eksterior yang fungsional serta memukau secara visual untuk showroom anda.",
};

const totem = {
  title: "Rack Sliding",
  description:
  "Optimalkan kebutuhan penyimpanan dan display Anda dengan solusi rak kustom dari kami. Mulai dari rak sliding untuk efisiensi ruang hingga rak tile untuk supermarket dan gudang.",
};

const acrylic = {
  title: "Interior",
  description:
    "Solusi interior kustom untuk berbagai kebutuhan rumah, termasuk kitchen set, ruang tamu, ruang rapat, dan elemen dekoratif.",
};


const exterior = {
  title: "Exterior",
  description:
    "Solusi eksterior yang tahan lama untuk rumah, serta lapangan luar dan dalam ruangan, dengan menawarkan kualitas yang tinggi dan instalasi dekoratif.",
};

const rack = {
  title: "Acrylic & Digital Printing",
  description:
    "Solusi cetak akrilik dan digital printing kustom untuk papan nama, display promosi, dan item dekoratif yang dipersonalisasi.",
};
---

<MainLayout
  title={pageTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "http://localhost:4321/contact",
    url: "http://localhost:4321/contact",
    name: "Services | Metalindo",
    description:
      "Don't hesitate to contact us. Let's collaborate and bring your vision to lifeâ€”because at Metalindo, your satisfaction is our priority.",
    isPartOf: {
      "@type": "WebSite",
      url: "http://localhost:4321",
      name: "Metalindo",
      description:
        "Kita menyediakan solusi untuk layanan pembuatan custom & modular berbasis metal, kayu, akrilik hingga printing untuk keperluan kegiatan event dan promosi.",
    },
    inLanguage: "en-US",
  }}
>
  <SubHeroSection title="Services" src={bg1} alt="Services" />
  <div class="default-p mt-2 md:-mt-8">
    <div class="relative">
      <div
        class="bg-container z-5 absolute inset-0 -left-40 w-[150dvw] overflow-hidden bg-white sm:-left-80 h-[35dvh] md:h-[35dvh] lg:-left-96 3xl:-left-[48rem]"
      >
        <div
          class="bg-image absolute h-full w-[150dvw] bg-cover bg-center"
          style={`background-image: url(${bg1.src});`}
        >
        </div>
        <div
          class="z-6 absolute inset-0 h-full w-[150dvw] bg-redP bg-opacity-85"
        >
        </div>
      </div>

      <div
        class="relative z-10 mb-4 pb-8 flex flex-col items-start justify-between gap-8 sm:mb-8 md:mb-12"
      >
        <div
          class="mx-auto flex max-w-3xl flex-col items-center justify-center py-2 md:flex-row md:space-x-8"
        >
          <div class="flex flex-col gap-6 md:w-2/5">
            <h1
              class="text-white text-balance font-oswald text-3xl font-bold tracking-tight md:text-4xl md:leading-tight h-1/2"
            >
              <Fragment set:html={exhibition.title} />
            </h1>
            <p
              class="text-white md:text-black border-l-2 md:border-l-0 border-redP pl-8 md:pl-0 pt-8 xl:-mb-20 h-1/2"
              set:html={exhibition.description}
            />
          </div>
          <Image
            src={boothdisplay}
            alt="Exhibition Image"
            class="rounded-xs aspect-[5/3] w-full md:w-3/5 mt-4 md:mt-0"
          />
        </div>
      </div>
    </div>
    <div
      class="flex flex-col-reverse items-center justify-center gap-8 sm:mb-8 md:mb-12 md:flex-row"
    >
      <div class="mt-8 flex flex-row space-x-4 md:w-1/2">
        <Image
          src={showroom1Image}
          alt="Showroom Image 1"
          class="rounded-xs relative -top-12 aspect-[3/4] w-1/2"
        />
        <Image
          src={showroom2Image}
          alt="Showroom Image 2"
          class="rounded-xs aspect-[3/4] w-1/2"
        />
      </div>
      <div class="flex flex-col gap-6 md:w-1/2">
        <h1
          class="text-balance font-oswald text-3xl font-bold tracking-tight md:text-4xl md:leading-tight"
        >
          <Fragment set:html={showroom.title} />
          <div class="w-[30%] border-b-4 border-redP"></div>
        </h1>
        <p class="pt-8" set:html={showroom.description} />
      </div>
    </div>
    <div class="flex flex-col items-center justify-center gap-8 md:flex-row">
      <div class="flex flex-col gap-6 md:w-1/2">
        <h1
          class="text-balance font-oswald text-3xl font-bold tracking-tight md:text-4xl md:leading-tight"
        >
          <Fragment set:html={totem.title} />
          <div class="w-[30%] border-b-4 border-redP"></div>
        </h1>
        <p class="pt-8" set:html={totem.description} />
      </div>
      <div class="mt-8 flex flex-row space-x-4 md:w-1/2">
        <Image
          src={racksliding}
          alt="RackSliding Image"
          class="rounded-xs aspect-[5/3] w-full"
        />
      </div>
    </div>
  </div>

  <GiveHelp />

  <div class="default-p">
    <div
      class="flex flex-col-reverse items-center justify-center gap-8 sm:mb-8 md:mb-12 md:flex-row"
    >
      <Image
        src={interior}
        alt="Interior Image"
        class="rounded-xs aspect-[5/3] w-full md:w-1/2"
      />
      <div class="flex flex-col gap-6 space-x-4">
        <h1
          class="text-balance font-oswald text-3xl font-bold tracking-tight md:text-4xl md:leading-tight"
        >
          <Fragment set:html={acrylic.title} />
        </h1>
        <p class="border-l-2 border-redP pl-4" set:html={acrylic.description} />
      </div>
    </div>
    <div
      class="flex flex-col items-center justify-center gap-8 sm:mb-8 md:mb-12 md:flex-row"
    >
      <div class="flex flex-col gap-6 space-x-4 md:w-1/2">
        <h1
          class="text-balance font-oswald text-3xl font-bold tracking-tight md:text-4xl md:leading-tight"
        >
          <Fragment set:html={exterior.title} />
        </h1>
        <p
          class="border-l-2 border-redP pl-4"
          set:html={exterior.description}
        />
      </div>
      <div class="flex flex-row space-x-1 md:w-1/2">
        <Image
          src={exterior1Image}
          alt="Digital Print Image 1"
          class="rounded-xs aspect-square w-1/2"
        />
        <Image
          src={exterior2Image}
          alt="Digital Print Image 2"
          class="rounded-xs aspect-square w-1/2"
        />
      </div>
    </div>
    <div
      class="flex flex-col-reverse items-center justify-center gap-8 mb-8 md:mb-12 md:flex-row"
    >
    <Image
      src={acrylicdigitalprinting}
      alt="Acrylic & Digital Printing Image"
      class="rounded-xs aspect-[4/4] w-full md:w-1/3 object-cover"
    />
  
      <div class="flex flex-col gap-6 space-x-4">
        <h1
          class="text-balance font-oswald text-3xl font-bold tracking-tight md:text-4xl md:leading-tight"
        >
          <Fragment set:html={rack.title} />
        </h1>
        <p class="border-b-2 border-redP pb-4" set:html={rack.description} />
      </div>
    </div>
  </div>
</MainLayout>

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  gsap
    .timeline({
      scrollTrigger: {
        trigger: ".bg-container",
        start: "top bottom",
        end: "bottom top",
        scrub: true,
      },
    })
    .fromTo(
      ".bg-image",
      { y: "10%", opacity: 0.6 }, // Moves slightly within container
      { y: "-10%", opacity: 1, ease: "none" }, // Keeps movement inside container
    );
</script>
