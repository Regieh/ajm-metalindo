---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import ContactSection from "@components/sections/id/ContactSection_id.astro";
---

<!--Utilizing MainLayout for the outer layout of the page, and defining meta for SEO purposes-->
<MainLayout
  title="Contact | Metalindo"
  lang="id"
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://Metalindo.uk//id/contact",
    url: "https://Metalindo.uk//id/contact",
    name: "Nous Contacter | Metalindo",
    description:
      "Vous avez des questions ou souhaitez discuter d'un projet ? Contactez-nous et élaborons ensemble la solution parfaite avec nos outils et services.",
    isPartOf: {
      "@type": "WebSite",
      url: "https://Metalindo.uk/id/",
      name: "Metalindo",
      description:
        "Metalindo propose des outils matériels de premier ordre et des services de construction experts pour répondre à tous vos besoins de projet.",
    },
    inLanguage: "id",
  }}
>
  <ContactSection />
</MainLayout>
