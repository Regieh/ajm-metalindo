---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import HeroSection from "@components/sections/landing/HeroSection.astro";
import ClientsSection from "@components/sections/landing/ClientsSection.astro";
import FAQ from "@components/sections/misc/FAQ.astro";
import heroImage from "@images/hero.png";
import experienceImg from "@images/experience.png";
import faqs from "@data/faqs.json";
import { partnersData } from "@/data_files/constants";
import { recommendData } from "@/data_files/constants";
import ProjectSection from "@/components/sections/projects/ProjectSection.astro";
import { Image } from "astro:assets";

import FeatureOver from "@/components/sections/features/FeatureOver.astro";
import RecommendSection from "@/components/sections/landing/RecommendSection.astro";
import GiveHelp from "@/components/sections/landing/GiveHelp.astro";

const avatarSrcs: Array<string> = [
  "https://images.unsplash.com/photo-1568602471122-7832951cc4c5?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1531927557220-a9e23c1e4794?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1541101767792-f9b2b1c4f127?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&&auto=format&fit=facearea&facepad=3&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1492562080023-ab3db95bfbce?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
];
---

<MainLayout>
  <HeroSection
    title=`<span class="text-redP">activate</span>
            your <br />
            <span class="text-redP">idea</span>
            is our <br /> responsibility`
    subTitle="High-quality custom signage, acrylic works, and digital printing solutions to bring your vision to life."
    primaryBtn="Our projects"
    primaryBtnURL="/projects"
    src={heroImage}
    alt="Hero AJM Metalindo"
  />

  <ProjectSection />
  <!-- Content -->
  <div class="relative z-10 mx-auto min-w-full overflow-x-hidden default-p">
    <!-- Product Section with Proper Spacing -->

      <FeatureOver
        title={`KAMI MEMBAWA LEBIH DARI <br />25 TAHUN PENGALAMAN`}
        subTitle={`Menyediakan solusi inovatif dan berkualitas tinggi untuk<br />
                    semua kebutuhan media dan promosi Anda. Keahlian kami<br />
                    meliputi berbagai industri, menawarkan layanan yang disesuaikan<br />
                    dengan visi Anda.`}
        src={experienceImg}
        alt="Experience"
      />

      <RecommendSection
        title="Kenapa memilih kami?"
        subTitle={`Kami percaya setiap ide adalah peluang besar untuk menciptakan sesuatu yang luar biasa.
                    <br/>Itulah mengapa <b>Metalindo</b> hadir sebagai mitra terpercaya Anda.`}
        datas={recommendData}
      />
  </div>

  <GiveHelp />

  <ClientsSection
    title="klien kami"
    subTitle="Kami telah bekerja sama dengan berbagai klien dari beragam industri."
    partners={partnersData}
  />

  <!-- <FAQ title="Frequently<br />asked questions" faqs={faqs} /> -->
</MainLayout>
